<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    android:elevation="3dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#dfe5f4"
    >

    <ImageView
        android:id="@+id/servises_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/maintenance" />

    <TextView
        android:id="@+id/text_servises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/servises_image"
        android:layout_toRightOf="@+id/servises_image"
        android:text="طلب صيانة"
        android:textSize="@dimen/fontdime"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bu_servises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_defult"
        android:text="@string/MainActivity_bu_request"
        android:onClick="go"
        android:textSize="@dimen/fontdime"
        android:textStyle="bold" />
</RelativeLayout>
</androidx.cardview.widget.CardView>